  <%- include('partials/head'); -%>
    <script type="text/javascript" src="/funciones.js"></script>
</head>

<body class="profile">
  <p style="display:none"><strong>Usuario</strong> :
  <p id="idEmail" style="display:none">
    <%=user.local.email%>
  </p><br>
  <p style="display:none"><strong>Empresa</strong> :
  <p id="idEmpresa" style="display:none">
    <%=user.local.nombreempresa%>
  </p><br>
  <div class="container">
    <header class="text-center">
      <br>
      <div class="p-3 bg-dark text-white rounded-3">
        <h1>Bienvenido al cálculo de IMD</h1>
        <h2>
          <%=user.local.email%>
        </h2>
        <h2>Empresa: <%=user.local.nombreempresa%>
        </h2>
        <br>
      </div>
      <br>
      <a href="/historial" class="btn btn-dark btn-lg">
        Historial
      </a>
      <% if(user.local.admin == true) {%>
      <a id="configBtn" href="/configuracion" class="btn btn-dark btn-lg">
        Configuracion
      </a>
